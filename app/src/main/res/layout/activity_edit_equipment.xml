<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.EditEquipmentActivity">

    <TextView
        android:id="@+id/tvEditTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Редактировать снаряжение"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        />

    <EditText
        android:id="@+id/etEditName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etEditQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Количество"
        android:inputType="number"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etEditDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etEditPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя файла фото (например, icon)"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etEditPriceUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Цена за единицу"
        android:inputType="numberDecimal"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnSaveEquipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:backgroundTint="@color/btngreen"
        android:layout_margin="24dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>
